{
  "name": "tito-casino-system",
  "version": "1.0.0",
  "description": "Sistema TITO para casino peque√±o - Ticket In Ticket Out",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run react-start\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "npm run react-build && electron-builder",
    "build:win": "npm run react-build && electron-builder --win",
    "build:portable": "npm run react-build && electron-builder --config electron-builder.portable.json --win portable",
    "start:prod": "npm run react-build && electron .",
    "start:pure": "electron ./Electron_Puro/main.js",
    "build:pure:dir": "electron-builder --config electron-builder.pure.json --win dir",
    "build:pure:portable": "electron-builder --config electron-builder.pure.json --win portable",
    "build:mac": "npm run react-build && electron-builder --mac",
    "build:linux": "npm run react-build && electron-builder --linux",
    "postinstall": "electron-builder install-app-deps",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.76.1",
    "better-sqlite3": "^8.7.0",
    "bwip-js": "^3.0.2",
    "crypto-js": "^4.2.0",
    "dotenv": "^17.2.3",
    "node-hid": "^2.1.2",
    "node-thermal-printer": "^4.4.0",
    "pdf-lib": "^1.17.1",
    "pdf-to-printer": "^5.1.0",
    "qrcode": "^1.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.26.0",
    "react-scripts": "5.0.1",
    "serialport": "^12.0.0",
    "sharp": "^0.33.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^13.4.0",
    "concurrently": "^8.2.2",
    "electron": "^27.3.11",
    "electron-builder": "^24.6.4",
    "jest": "^29.7.0",
    "spectron": "^19.0.0",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.casino.tito",
    "productName": "Sistema TITO Casino",
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "files": [
      "build/**/*",
      "src/main/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "templates",
        "to": "templates"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/main/main.js"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
